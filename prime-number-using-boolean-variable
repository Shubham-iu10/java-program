//prime-number-using-boolean-variable;

package basicProgram;

public class PrimeNowithboolean {

	public static boolean IsPrimeNumber(int num) {
		
		if (num<=1){
		return false;
		}
		
		for(int i=2; i<num; i++) {
			if (num % i == 0) {
				return false;
			}
		}
		return true;
  	}
  }
		
		public static void main(String[] arg) {
			
			System.out.println("It is a Prine number:? " +IsPrimeNumber(2));
			
		}
	}
	
